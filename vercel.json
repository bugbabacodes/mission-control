{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "dashboard/**",
      "use": "@vercel/static"
    },
    {
      "src": "database/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      },
      "continue": true
    },
    {
      "src": "/dashboard/(.*)",
      "headers": { "Cache-Control": "no-cache, no-store, must-revalidate" },
      "continue": true
    },
    {
      "src": "/database/(.*)",
      "headers": { 
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Access-Control-Allow-Origin": "*"
      },
      "continue": true
    },
    { "src": "/api/data", "dest": "/api/data.js" },
    { "src": "/api/control", "dest": "/api/control.js" },
    { "src": "/api/logs", "dest": "/api/logs.js" },
    { "src": "/api/chat", "dest": "/api/chat.js" },
    { "src": "/api/dashboard/(.*)", "dest": "/api/live-dashboard.js" },
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/", "dest": "/dashboard/index.html" }
  ]
}
